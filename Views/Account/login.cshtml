@model HomeCarePro.Models.ViewModel.LoginSignUpViewModel;
@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 mt-5 border border-primary rounded pt-5 pb-5 pl-5 pr-5 ">
            <div class="text-center">
                <h1 class="text-info">Log In To Your Account</h1>
            </div>
            <form method="post" asp-action="signup">
                <div class="form-group">
                    <label asp-for="username">Username</label>
                    <input type="text" asp-for="username" placeholder="Enter a Username" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="password">Password</label>
                    <input type="password" asp-for="password" placeholder="Enter Password" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary mt-3 mb-2 float-end px-5" value="Log In" />
                </div>
            </form>
            <div class="text-center mt-5">
            <a class="text-primary" asp-action="signup" asp-controller="Account">Don't Have an Account?Sign Up</a>
            </div>
        </div>
    </div>
</div>




